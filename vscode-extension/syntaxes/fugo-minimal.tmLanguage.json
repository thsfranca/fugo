{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fugo",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#brackets"
    },
    {
      "include": "#symbols"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.semicolon",
      "begin": ";",
      "end": "$"
    },
    "strings": {
      "name": "string.quoted.double",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "name": "keyword.control",
      "match": "\\b(def|defn|let|if|do|fn|quote|lambda|true|false|nil)\\b"
    },
    "operators": {
      "name": "keyword.operator",
      "match": "[+\\-*/=<>!&|]+"
    },
    "brackets": {
      "patterns": [
        {
          "name": "punctuation.section.parens.fugo",
          "match": "[()]"
        },
        {
          "name": "punctuation.section.brackets.fugo",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.braces.fugo",
          "match": "[{}]"
        }
      ]
    },
    "function-calls": {
      "name": "meta.function-call.fugo",
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": {"name": "punctuation.section.parens.fugo"}
      },
      "endCaptures": {
        "0": {"name": "punctuation.section.parens.fugo"}
      },
      "patterns": [
        {
          "name": "entity.name.function.fugo",
          "match": "\\G\\s*([a-zA-Z][a-zA-Z0-9_-]*)",
          "captures": {
            "1": {"name": "entity.name.function.fugo"}
          }
        },
        {
          "include": "#comments"
        },
        {
          "include": "#strings"
        },
        {
          "include": "#numbers"
        },
        {
          "include": "#keywords"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#function-calls"
        },
        {
          "include": "#symbols"
        }
      ]
    },
    "symbols": {
      "name": "variable.other.fugo",
      "match": "\\b[a-zA-Z][a-zA-Z0-9_-]*\\b"
    }
  },
  "scopeName": "source.fugo"
}