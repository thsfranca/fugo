{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fugo",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#brackets"
    },
    {
      "include": "#symbols"
    }
  ],
  "repository": {
    "comments": {
      "name": "comment.line.semicolon.fugo",
      "begin": ";",
      "end": "$"
    },
    "strings": {
      "name": "string.quoted.double.fugo",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.fugo",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.fugo",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.fugo",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "name": "keyword.control.fugo",
      "match": "\\b(def|defn|let|if|do|fn|quote|lambda|true|false|nil)\\b"
    },
    "operators": {
      "name": "keyword.operator.fugo",
      "match": "[+\\-*/=<>!&|]+"
    },
    "brackets": {
      "patterns": [
        {
          "name": "punctuation.section.parens.fugo",
          "match": "[()]"
        },
        {
          "name": "punctuation.section.brackets.fugo",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.section.braces.fugo",
          "match": "[{}]"
        }
      ]
    },
    "symbols": {
      "name": "entity.name.function.fugo",
      "match": "\\b[a-zA-Z][a-zA-Z0-9_-]*\\b"
    }
  },
  "scopeName": "source.fugo"
}