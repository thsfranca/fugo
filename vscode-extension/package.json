{
  "name": "vex-minimal",
  "displayName": "Vex Minimal",
  "description": "Minimal Vex language support with automated changelog - testing automation",
  "version": "0.1.4",
  "publisher": "vex-dev",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vex",
        "aliases": [
          "Vex",
          "vex-lang"
        ],
        "extensions": [
          ".vx"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icon.png",
          "dark": "./icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "vex",
        "scopeName": "source.vx",
        "path": "./syntaxes/vex-minimal.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "id": "vex-dark",
        "label": "Vex Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/vex-dark-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "vex-icons",
        "label": "Vex File Icons",
        "path": "./icons/vex-icon-theme.json"
      }
    ],
    "icons": {
      "vex-file": {
        "description": "Vex file icon",
        "default": {
          "iconPath": "./icon.png"
        }
      }
    }
  }
}
